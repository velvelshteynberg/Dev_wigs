<h1> Request a consultation </h1> 
<h2> Please fill out the form and submit it to us. We will get back to you promptly </h2> 

<%= form_for @consultation_request do |f| %>

    <div> 
        <%= f.label :first_name %>
        <%= f.text :first_name
    </div> 

    <div> 
        <%= f.label :last_name %>
        <%= f.text :last_name
    </div> 

    <div> 
        <%= f.label :email %>
        <%= f.text :email %>
    </div> 

    <div> 
        <%= f.label :phone %>
        <%= f.number :phone %> 
    </div> 

    <div> 
        <%= f.label :consultation_request %>
        <%= f.checkbox :consultation_request %> 
    </div> 

    <div> 
        <%= f.label :consultation_request %>
        <%= f.text :consultation_request, :attr, placeholder: "Any specific questions..." %> 
    </div> 

<%= f.submit "Submit request" %>

<% end %>