<!DOCTYPE html>
<html>
      <head>
        <title>DevWigs</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
      </head>

  <body > 
    <div class = 'div'>
     <img class = 'image' alt = 'image' src ='https://media.istockphoto.com/photos/wigs-set-picture-id484931266?k=6&m=484931266&s=612x612&w=0&h=IjEv3uKfKYF9ocD12Ljinx1F-QwAMqxlYzGsK_ULOQc='>
            <nav class="nav-bar">
              <div class = 'nav-items'>
                <ul class="">
                  <li class="nav-item">
                    <%= link_to "About Us", root_path, :class=> "nav-link active" %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "Gallery", photos_path,  :class=> "nav-link active"  %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "Reviews", reviews_path,  :class=> "nav-link active"  %>
                  </li>
                  <li class="nav-item"> 
                    <h3>Dev Wigs</h4>
                  </li>
                  <% if current_user %> 
                  <li class="nav-item">
                    <%= link_to "Log out", session_path, method: :delete, :class=> "nav-link active" %>
                  </li>
                  <% end %>
                </ul>
              </div>
        </nav>
      </div>

    <%= yield %>


    <%= form_for :client, url:  clients_path do |f| %> 
        <div class="mb-3 consultation_request_form">
          <%= f.label :email, :class=> " label form-label"%>
          <div> 
          <%= f.text_field :email, :class=> 'form-control input_box' %>
          </div> 
          <br> 
      <%= f.submit "Book consultation", :class=> 'btn btn-success consultation_booking_button'  %>
    <% end %> 
        </div>




  
   
   
