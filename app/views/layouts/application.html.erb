<!DOCTYPE html>
<html>
  <head>
    <title>DevWigs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div> 
    <nav class= "nav_bar">
      <%= link_to "About Us", root_path, :class=> "link" %>
      <%= link_to "Gallery", photos_path, :class=> "link" %>
      <%= link_to "Reviews", reviews_path, :class=> "link" %>
      <%= link_to "Log in", new_session_path, :class=> "link" %>
    </nav>
  </div> 

  <body>
    <%= yield %>
  </body>

 <div> 
     <h1> Request a consultation </h1> 
  </div> 

 <div> 
    <h2> Please fill out the form and submit it to us. We will get back to you promptly </h2>
  </div>  

<%= form_for :consultation, url: consultations_path do |f| %>

    <%= fields_for :client do |ff| %> 
        

        <div> 
            <%= ff.label :first_name %>
            <%= ff.text_field :first_name %>
        </div> 
    
        <div> 
        
             <%= ff.label :last_name %>
            <%= ff.text_field :last_name %>
       
        </div> 

        <div> 
       
            <%= ff.label :email %>
            <%= ff.text_field :email %>
       
        </div> 

        <div> 
      
            <%= ff.label :phone %>
            <%= ff.text_field :phone %> 
        
        </div> 

     <% end %>

    <div> 
        <%= f.label :consultation_request %>
        <%= f.text_field :request %> 
    </div> 

    <%= f.submit "Submit request" %>

<% end %>


</html>
