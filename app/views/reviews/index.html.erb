#put this form into reviews#index page and use an if condition dependent on whether I am the admin or not
<% if @not_approved_and_not_looked_over_reviews.count > 0 %>


     <h1> These are the reviews that await your approval and confirmation </h1> 

        <%= @not_approved_and_not_looked_over_reviews.each do |review| %> 

          
            <h2> Submitted by <%= review.client.first_name %> <%= review.client.last_name %> </h2> 
            <h3> In the review <%= review.client.first_name %> <%= review.client.last_name %> writes that <%= review.review %> </h3> 
     
         
        
            <div>
                    <%= form_for review, url:  review_approvals_path(review), method: :post do |f| %>
                        <%= f.submit "Approve review" %> 
                    <% end %> 
            </div>
        
            <div> 
                 <%= link_to "Delete review", review_path(review), method: :delete, data: {confirm: "Are you sure?" } %>
            </div> 

        <%  end %>  

   <% else %> 

   render plain: "no reviews to review ;)"

   <% end %> 
   

   

